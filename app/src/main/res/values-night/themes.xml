<resources>
    <!-- Base application theme. -->
    <style name="app_Theme.AndroidShowcase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_orange_200</item>
        <item name="colorPrimaryVariant">@color/app_orange_700</item>
        <item name="colorOnPrimary">@color/app_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_amber_200</item>
        <item name="colorSecondaryVariant">@color/app_amber_200</item>
        <item name="colorOnSecondary">@color/app_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
